<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="File" fileName="../logs/Minty.log" immediateFlush="true"
			append="false">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
		<File name="ToolAudit" fileName="../logs/ToolAudit.log" immediateFlush="true"
			append="true">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
		<Logger name="org.hibernate" level="info" />
		<Logger name="org.hibernate.SQL" level="info" />
		<Logger name="org.hibernate.type" level="info" />
		<Logger name="org.hibernate.mapping" level="info" />
		<Logger name="org.springframework" level="info" />
		<Logger name="org.springframework.ai.ollama" level="debug" />
		<Logger name="org.springframework.web.client.RestTemplate" level="debug" />
		<!--Logger name="org.springframework.jdbc.core.JdbcTemplate" level="debug" />
		<Logger name="org.springframework.ai" level="debug" /-->
		<Logger name="tom" level="info" />
		<Logger name="org.springframework.security" level="info" />

		<Logger name="tom.tool.auditing.AuditingToolCallingManager"
			level="info" additivity="false">
			<AppenderRef ref="ToolAudit"/>
			<AppenderRef ref="Console" />
		</Logger>

	</Loggers>
</Configuration>