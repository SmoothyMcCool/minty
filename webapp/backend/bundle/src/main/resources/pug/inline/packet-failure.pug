if text.size() > 0 || data.size() > 0
  .card.mb-4
    .card-header.bg-danger.text-white #{id}
    .card-body
      //- Text Section
      h5.text-muted Text
      if text.size() > 1
        ul.list-group.mb-3
          each t in text
            - var safe = helpers.tryMakeSafe(t)
            if safe
              li.list-group-item !{safe} // raw HTML â€“ already sanitized
            else
              li.list-group-item #{t} // plain-text (escaped)
      else if text.size() == 1
        - var safe = helpers.tryMakeSafe(text.get(0))
        if safe
          p.card-text !{safe}
        else
          p.card-text #{text.get(0)}

      //- Data Section
      h5.text-muted Data
      if data.size() > 1
        ul.list-group
          each d in data
            li.list-group-item
              pre.mb-0 #{helpers.jsonToString(d)}
      else if data.size() == 1
        pre.card-text #{helpers.jsonToString(data.get(0))}